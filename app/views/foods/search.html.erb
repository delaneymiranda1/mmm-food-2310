
<% if @error_message %>
  <p><%= @error_message %></p>
<% else %>
  <p>Total number of items returned by the search: <%= @total_items %></p>

  <ul>
    <% @foods.each do |food| %>
      <li>
        <p>GTIN/UPC code: <%= food.gtin_upc %></p>
        <p>Description: <%= food.description %></p>
        <p>Brand Owner: <%= food.brand_owner %></p>
        <p>Ingredients: <%= food.ingredients %></p>
      </li>
    <% end %>
  </ul>
<% end %>